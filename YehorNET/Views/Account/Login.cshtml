@{
    ViewData["Title"] = "Login";
}

<div class="auth-page">
    <h1>Login</h1>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "auth-page__form" }))
    {
        @Html.Hidden("returnUrl", (string)ViewBag.ReturnUrl)

        <div class="form-group mb-4">
            <label for="inputName" class="mb-2">Username</label>

            <input type="text" class="form-control mb-2" placeholder="Enter username" name="name" id="inputName" required>
            <small class="form-text text-muted">Name must be unique</small>
        </div>

        <div class="form-group mb-4">
            <label for="inputPassword" class="mb-2">Password</label>
            <input type="password" class="form-control" placeholder="Enter password" name="password" id="inputPassword" required>
        </div>

        <button class="btn btn-primary" style="width: 100%;">Log in</button>
    }
</div>
