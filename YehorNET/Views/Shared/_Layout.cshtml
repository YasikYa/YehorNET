<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div>
        @if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Logout", "Logout", "Account");
        } else
        {
            @Html.ActionLink("SignUp", "SignUp", "Account", new { ReturnUrl = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString });
            <span>|</span>
            @Html.ActionLink("Login", "Login", "Account", new { ReturnUrl = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString });
        }

    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
