@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @using (Html.BeginForm("List", "Doctors", FormMethod.Get))
    {
        <div class="form-group">
            <input type="text" class="form-control" aria-describedby="search" placeholder="Search by name" name="searchString">
            <small class="form-text text-muted">Leave empty to search for all</small>
        </div>
        @Html.DropDownList("treatments", (IEnumerable<SelectListItem>)ViewBag.TreatFilter, new { @class = "custom-select" })
        <input type="submit" value="Search" class="btn btn-primary">
    }
</div>
